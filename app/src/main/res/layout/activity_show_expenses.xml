<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context=".DisplayExpensesActivity">

    <Toolbar
        android:id="@+id/displayExpensesActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/grey">
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="14dp"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/expensesTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:textAlignment="center"
            android:textSize="48sp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blueGrey" />

        <TextView
            android:id="@+id/amountExpensesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="textEnd"
            android:textSize="30sp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="$234.67"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blueGrey" />

        <ScrollView
            android:id="@+id/expensesTitleScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/expensesScrollViewLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>